@model Dweb_Projeto.Models.Comentarios

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar comentário</h1>

<h4>Comentarios</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CommentId" />
            <div class="form-group">
                <label asp-for="Texto" class="control-label"></label>
                <input asp-for="Texto" class="form-control" />
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UtilizadorFK" class="control-label"></label>
                <select asp-for="UtilizadorFK" class="form-control" asp-items="ViewBag.UtilizadorFK"></select>
                <span asp-validation-for="Utilizador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicacaoFK" class="control-label"></label>
                <select asp-for="PublicacaoFK" class="form-control" asp-items="ViewBag.PublicacaoFK"></select>
                <span asp-validation-for="Publicacao" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar alterações" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à listagem de comentários</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
