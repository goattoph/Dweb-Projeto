@model Dweb_Projeto.Models.Publicacao

@{
    ViewData["Title"] = "Adicionar Publicação";
}

<h1>Adicionar uma nova Publicação</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        @*
            o 'form' é o objeto que transporta os nossos dados
            para o Servidor
        *@
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            @*
                NÃO ESQUECER:
                qd se pretende enviar ficheiros para o Servidor
                o FORM tem de ser formatado com enctype="multipart/form-data"
            *@
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input type="file" name="FotoPublicacao" accept=".png,.jpg,.jpeg" class="form-control" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataPublicacao" class="control-label"></label>
                <input type="date" class="form-control" />
                <span asp-validation-for="DataPublicacao" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="UtilizadorFK" class="control-label"></label>
                <select asp-for="UtilizadorFK" class ="form-control" asp-items="ViewBag.UtilizadorFK">
                    <option value="-1"> -- Escolha um utilizador, por favor -- </option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regressar à listagem de publicações</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
